                "did:peer"
            ],
            "credential_signing_alg_values_supported": [
                "ES256"
            ],
            "proof_types_supported": {
                "jwt": {
                    "proof_signing_alg_values_supported": "EdDSA"
                }
            },
            "claims": {
                "firstname": {
                    "mandatory": true,
                    "value_type": "string"
                },
                "lastname": {
                    "mandatory": true,
                    "value_type": "string"
                },
                "age": {
                    "mandatory": false,
                    "value_type": "number"
                },
                "isover18": {
                    "mandatory": true,
                    "value_type": "boolean"
                },
                "reject_credential": {
                    "value_type": "boolean"
                }
            }
        }
    },
    "credential_identifiers_supported": true
